<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Translucent_NoTitle" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item> <!-- 设置自定义布局的背景透明 -->
        <item name="android:windowBackground">@android:color/transparent
        </item>  <!-- 设置window背景透明，也就是去边框 -->
    </style>

    <style name="baseDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="creditPromoteDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item><!--边框-->
        <!--<item name="android:windowIsFloating">true</item>&lt;!&ndash;是否浮现在activity之上&ndash;&gt;-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/transparent</item>
        <item name="colorControlActivated">@color/lightgray</item>
    </style>

    <!-- tips提示框 -->
    <style name="tipsDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item><!--边框-->
        <!--<item name="android:windowIsFloating">true</item>&lt;!&ndash;是否浮现在activity之上&ndash;&gt;-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:windowEnterAnimation">@anim/anim_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_bottom_out</item>
    </style>

    <style name="zmLowVCheck" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/sp_bgr_zm_lowv_check</item>
    </style>

    <style name="bank_add_err">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#ff3320</item>
        <item name="android:textSize">@dimen/x25</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/x200</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingBottom">@dimen/y20</item>
    </style>

    <!-- 拨打电话样式 -->
    <style name="TelDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item><!--边框-->
        <!--<item name="android:windowIsFloating">true</item>&lt;!&ndash;是否浮现在activity之上&ndash;&gt;-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
    </style>

    <style name="CommonDialog" parent="@android:style/Theme.Dialog">

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="BottomSelectDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/background_white_color</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Animation.BottomSelect" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="Animation.LeftRight" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_right</item>
    </style>

    <!-- 横线样式 -->
    <style name="hNperLineStyle">
        <item name="android:background">@color/color_nper_list_divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y1</item>
    </style>

    <style name="BottomValidateDialog" parent="@android:style/Theme.Holo.DialogWhenLarge">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SubmitBtn" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y88</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/x32</item>
        <item name="android:background">@drawable/selector_reg</item>
    </style>

    <style name="reimburse_dtl_item_rl">
        <item name="android:paddingLeft">@dimen/y30</item>
        <item name="android:paddingRight">@dimen/y30</item>
        <item name="android:paddingTop">@dimen/y15</item>
        <item name="android:paddingBottom">@dimen/y15</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#fbfbfb</item>
    </style>

    <style name="repayment_dtl_item_rl">
        <item name="android:paddingLeft">@dimen/y30</item>
        <item name="android:paddingRight">@dimen/y30</item>
        <item name="android:paddingTop">@dimen/y15</item>
        <item name="android:paddingBottom">@dimen/y15</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#fbfbfb</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_auth</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- 自定义dialog的样式 -->
    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:backgroundDimAmount">0.2</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0</item>
    </style>

    <!-- 横线样式 -->
    <style name="hLineStyle">
        <item name="android:background">@color/fw_default_divider_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y1</item>
    </style>

    <!-- 横线样式 -->
    <style name="hLineStyleE4">
        <item name="android:background">@color/color_e4e4e4</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y1</item>
    </style>

    <!-- 横线样式 -->
    <style name="hLineStyleDE">
        <item name="android:background">@color/color_dedede</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y1</item>
    </style>

    <!-- 横线样式 -->
    <style name="hLineStyleED">
        <item name="android:background">@color/color_ededed</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y1</item>
    </style>

    <!-- 横线样式(新) -->
    <style name="hNewLineStyle">
        <item name="android:background">@color/fw_default_divider_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>
    <!-- 横线样式 -->
    <style name="hMarginLineStyle">
        <item name="android:background">@color/fw_default_divider_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/x24</item>
        <item name="android:layout_marginRight">@dimen/x24</item>
        <item name="android:layout_height">@dimen/y1</item>
    </style>
    <!-- 竖线样式 -->
    <style name="vLineStyle">
        <item name="android:layout_width">@dimen/x1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/fw_default_divider_color</item>
    </style>

    <!-- View之间的间隔样式 -->
    <style name="hDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20px</item>
        <item name="android:background">@color/fw_colorGrey</item>
    </style>

    <!-- 升级progressBar样式 -->
    <style name="core_progress_bar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">@dimen/x20</item>
        <item name="android:minHeight">@dimen/x15</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/fw__shape_progress_bar</item>
    </style>

    <!-- 白色layout样式 -->
    <style name="WhiteLayoutTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/item_selector</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/x20</item>
        <item name="android:paddingRight">@dimen/x20</item>
    </style>

    <!-- 含下划线的WhiteSelectorLayoutTheme -->
    <style name="WhiteSelectorLayoutThemeLine" parent="@style/WhiteLayoutTheme">
        <item name="android:background">@drawable/item_selector_line</item>
    </style>

    <style name="custom_dialog2" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否漂现在activity上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 去除黑色边框的关键设置项 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 屏幕背景是否变暗 -->
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="picker_view_scale_anim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pickerview_dialog_scale_in</item>
        <item name="android:windowExitAnimation">@anim/pickerview_dialog_scale_out</item>
    </style>


    <style name="picker_view_slide_anim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pickerview_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/pickerview_slide_out_bottom</item>
    </style>

</resources>