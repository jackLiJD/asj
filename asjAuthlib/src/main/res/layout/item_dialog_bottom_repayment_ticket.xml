<?xml version="1.0" encoding="utf-8"?><!--还款底部弹窗 优惠券列表-->

<com.ald.asjauthlib.widget.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="6dp"
    android:visibility="visible"
    app:shadowDx="0dp"
    app:shadowDy="3dp"
    app:shadowRadius="3dp"
    app:shadowSide="bottom"
    app:shadow_Color="@color/color_35dedede"
    tools:ignore="UseCompoundDrawables,ContentDescription">

    <LinearLayout
        android:id="@+id/item_dialog_bottom_repayment_ticket_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_item_coupon_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/coupon_price_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:id="@+id/coupon_price"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_ff5252"
                android:textSize="14sp"
                tools:text="15" />

            <TextView
                android:id="@+id/coupon_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_ff5252"
                android:textSize="14sp"
                tools:text="满减券" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/coupon_info_parent"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/coupon_limit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_393939"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="空间急急急急急急" />

            <TextView
                android:id="@+id/coupon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_393939"
                android:textSize="13sp"
                tools:text="使用说明" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/coupon_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_393939"
                    android:textSize="12sp"
                    tools:text="3天后过期" />

                <ImageView
                    android:id="@+id/coupon_date_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5.5dp"
                    android:src="@drawable/xs" />
            </LinearLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/coupon_select"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/drawable_coupon_check"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/coupon_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_dialog_bottom_repayment_ticket_parent"
        android:background="@color/color_f5f6fa"
        android:padding="10dp"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/x24"
        tools:text="说啊付款了是否考虑接受康复科大夫手机发顺丰" />
</com.ald.asjauthlib.widget.ShadowLayout>

