<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Translucent_NoTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/x30"
    android:layout_marginRight="@dimen/x30"
    android:background="@drawable/shape_circle_white_bg"
    android:orientation="vertical"
    android:paddingTop="@dimen/y104"
    tools:ignore="ContentDescription,RtlHardcoded">

    <TextView
        android:id="@+id/txt_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y104"
        android:background="@color/white"
        android:gravity="left|center"
        android:paddingLeft="@dimen/x42"
        android:paddingRight="@dimen/x42"
        android:textColor="@color/color_303030"
        android:lineSpacingExtra="10dp"
        android:textSize="@dimen/x30"
        tools:text="由于多次录入密码错误，暂时被锁定，请更改密码或2小时后再试！" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_e4e4e4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_pwd_forget"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cashier_err_dialog_pwd_forget"
            android:textColor="@color/color_blue_renewal_all"
            android:textSize="@dimen/x32" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_e4e4e4" />

        <TextView
            android:id="@+id/iv_close"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cashier_err_dialog_cancel"
            android:textColor="@color/text_color_normal"
            android:textSize="@dimen/x32" />
    </LinearLayout>

</LinearLayout>