<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
    <LinearLayout
        android:id="@+id/update_frame"
        android:layout_width="@dimen/y540"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_update_selector"
        android:orientation="vertical">
        <!-- Title -->
        <TextView
            android:id="@+id/up_title"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="更新进度"
            android:textSize="18dp"
            android:textColor="#111111"/>
        <ProgressBar
            android:id="@+id/pb_progress"
            style="@style/core_progress_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/fw__bg_progress_bar"
            android:max="100"
            android:progress="0" />
    </LinearLayout>
</RelativeLayout>